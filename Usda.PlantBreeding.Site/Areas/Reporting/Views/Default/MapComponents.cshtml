@model Usda.PlantBreeding.Core.Models.MapComponentReportViewModel

@{
    ViewBag.Title = @Model.MapName;
    ViewBag.IndexTitle = @Model.MapName;
}
<div class="row"></div>
<h2>Map Components</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                @Html.HiddenFor(m => m.MapId)
                @Html.HiddenFor(m => m.MapName)
                @Html.HiddenFor(m => m.MapFullName)
                @Html.HiddenFor(m => m.MapIsSeedling)
                @Html.HiddenFor(m => m.Virus1Label)
                @Html.HiddenFor(m => m.Virus2Label)
                @Html.HiddenFor(m => m.Virus3Label)
                @Html.HiddenFor(m => m.Virus4Label)


                <div class="form-group">
                    @Html.LabelFor(model => model.MapName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.MapFullName, new { htmlAttributes = new { @class = "form-control ", @disabled = "true" } })
                        @Html.ValidationMessageFor(model => model.MapFullName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MapPlantedYear, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.MapPlantedYear, new { htmlAttributes = new { @class = "form-control ", @disabled = "true" } })
                        @Html.ValidationMessageFor(model => model.MapPlantedYear, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MapYear, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.MapYear, new { htmlAttributes = new { @class = "form-control col-md-3" } })
                        @Html.ValidationMessageFor(model => model.MapYear, "", new { @class = "text-danger" })
                    </div>
                </div>
             
                @if (Model.MapIsSeedling)
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.SeedlingComponentValue, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.SeedlingComponentValue, (IEnumerable<SelectListItem>)Model.SeedlingComponentTypes, "", new { @class = "form-control col-md-2" })
                            @Html.ValidationMessageFor(model => model.SeedlingComponentTypes, "", new { @class = "text-danger" })
                        </div>
                    </div>
                }
                    
                       
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Report" class="btn btn-default" />
                    </div>
                </div>

            </div>

        </div>




    </div>
}


