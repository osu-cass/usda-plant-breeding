@using Usda.PlantBreeding.Core.Models;

@model IEnumerable<FamilyUseViewModel>



<div class="momentum-scroll-dt" style="height: 30vh;">
    <table class="table table-striped table-hover table-bordered table-font-small table-condensed table-responsive" id="crossuse" cellspacing="0" width="100%">
        <thead>
            <tr class="primary">

                <th class="col-md-2">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="col-md-2">
                    @Html.DisplayNameFor(model => model.CrossWithName)
                </th>
                <th class="col-md-4">
                    @Html.DisplayNameFor(model => model.PurposeName)
                </th>
                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.SeedNumber)
                </th>
                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.FieldNumber)
                </th>
                <th class="col-md-1">
                    @Html.DisplayNameFor(model => model.SelectionCount)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (FamilyUseViewModel item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CrossWithName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.PurposeName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Year)
                    </td>
                    <td style="text-align: right;">
                        @Html.DisplayFor(m => item.SeedNumber)
                    </td>
                    <td style="text-align: right;">
                        @Html.DisplayFor(m => item.FieldNumber)
                    </td>
                    <td style="text-align: center;">

                        @* actionlink or something that will trigger the function *@
                        @if (item.SelectionCount > 0)
                        {

                            <button class="button btn-link btn-xs" onclick="GetCrossSelectionsModal(@item.Id)">@Html.DisplayFor(m => item.SelectionCount)</button>

                        }
                        else
                        {
                            @Html.DisplayFor(m => item.SelectionCount)

                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>