@model IEnumerable<Usda.PlantBreeding.Data.Models.CrossType>


<div class="row"></div>
<p class="text-center">
    @Html.ActionLink("+ Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

<br>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-offset-3 col-md-6 ">


                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#active" aria-controls="Active" role="tab" data-toggle="tab">Active</a></li>
                    <li role="presentation" class="retired"><a href="#retired" aria-controls="Retired" role="tab" data-toggle="tab">Retired</a></li>
                </ul>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active" id="active">
                        <br />
                        <table class="table table-striped table-hover ">
                            <thead>
                                <tr class="primary">
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Value)
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                </tr>
                            </thead>

                            @foreach (var item in Model.Where(i => i.Retired == false && !String.IsNullOrWhiteSpace(i.Name)))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Value)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink(item.Retired ? "Unretire" : "Retire", "Retire", new { id = item.Id, genus = item.GenusId })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                    <div role="tabpanel" class="tab-pane fade" id="retired">
                        <br />
                        <table class="table table-striped table-hover ">
                            <thead>
                                <tr class="primary">
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Value)
                                    </th>
                                    <th >
                                        Actions
                                    </th>
                                    </tr>
                            </thead>

                            @foreach (var item in Model.Where(i => i.Retired == true))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Value)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink(item.Retired ? "Unretire" : "Retire", "Retire", new { id = item.Id, genus = item.GenusId })
                                    </td>
                                </tr>
                            }


                        </table>
                    </div>
                </div>
            </div>
        </div>
        <br />

    </div>
</div>
