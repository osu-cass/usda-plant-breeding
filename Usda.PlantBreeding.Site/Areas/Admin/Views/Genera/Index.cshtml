@model IEnumerable<Usda.PlantBreeding.Data.Models.Genus>

<div class="row"></div>
<p class="text-center">
    @Html.ActionLink("+ Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<div class="panel panel-default">
    <div class="panel-body">
        <br />
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#active" aria-controls="Active" role="tab" data-toggle="tab">Active</a></li>
            <li role="presentation" class="retired"><a href="#retired" aria-controls="Retired" role="tab" data-toggle="tab">Retired</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="active">
                <br />
                <table class="table table-hover table-striped" style="width:70%; margin-left:18%">
                    <thead>
                        <tr class="primary">
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Value)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DefaultPlantsInRep)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Where(g => g.Retired == false))
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DefaultPlantsInRep)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink(item.Retired ? "Unretire" : "Retire", "Retire", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </table>

            </div>
            <div role="tabpanel" class="tab-pane fade" id="retired">
                <br />
                <table class="table table-hover table-striped" style="width:70%; margin-left:18%">
                    <thead>
                        <tr class="primary">
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Value)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DefaultPlantsInRep)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Where(g => g.Retired == true))
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DefaultPlantsInRep)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink(item.Retired ? "Unretire" : "Retire", "Retire", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </table>

            </div>
        </div>
